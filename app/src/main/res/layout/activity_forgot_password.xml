<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/home_padding"
    tools:context=".activities.ForgotPasswordActivity">

    <EditText
        android:id="@+id/email_forgot_psw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_padding"
        android:background="@android:color/transparent"
        android:drawablePadding="12dp"
        android:hint="@string/email_forgot_psw"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:padding="8dp"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorFields" />

    <View
        android:id="@+id/email_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/email_forgot_psw"
        android:background="@color/colorSecondary" />

    <Button
        android:id="@+id/forgot_button"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_forgot_psw"
        android:layout_marginTop="@dimen/home_padding"
        android:background="@drawable/background_signup"
        android:clickable="true"
        android:focusable="true"
        android:onClick="getForgotPassword"
        android:padding="@dimen/default_padding"
        android:text="@string/send_back_psw"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="18sp" />

</RelativeLayout>