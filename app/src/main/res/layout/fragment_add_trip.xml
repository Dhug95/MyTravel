<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_trip_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/home_padding"
    tools:context=".AddTripFragment">

    <EditText
        android:id="@+id/trip_name_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:drawablePadding="12dp"
        android:hint="@string/trip_name"
        android:padding="8dp"
        android:textColor="@color/colorPrimary"
        android:textColorHint="@color/colorFields" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/trip_name_create"
        android:background="@color/colorSecondary" />

    <LinearLayout
        android:id="@+id/internal_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trip_name_create"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/start_date_button"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp"
            android:layout_weight="1"
            android:background="@drawable/background_login"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/default_padding"
            android:tag="@string/start_date"
            android:text="@string/start_date"
            android:textAllCaps="false"
            android:textColor="@color/colorSecondary"
            android:textSize="18sp" />

        <Button
            android:id="@+id/end_date_button"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp"
            android:layout_weight="1"
            android:background="@drawable/background_login"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/default_padding"
            android:tag="@string/end_date"
            android:text="@string/end_date"
            android:textAllCaps="false"
            android:textColor="@color/colorSecondary"
            android:textSize="18sp" />
    </LinearLayout>

    <Button
        android:id="@+id/create_trip"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:drawableStart="@drawable/ic_add_white_24dp"
        android:layout_marginBottom="24dp"
        android:layout_below="@id/internal_linear"
        android:background="@drawable/background_create"
        android:clickable="true"
        android:focusable="true"
        android:padding="@dimen/default_padding"
        android:text="@string/add_to_the_list"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="18sp" />


</RelativeLayout>